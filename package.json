{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.0"
  },
  "lint-staged": {
    "*.{js,css,md,jsx}": "prettier --write"
  },
  "scripts": {
    "frontend": "yarn workspace frontend start",
    "backend": "yarn workspace backend start",
    "backend:dev": "yarn workspace backend start:dev",
    "start": "concurrently  --kill-others-on-fail \"yarn backend\" \"yarn frontend\"",
    "start:dev": "concurrently  --kill-others-on-fail \"yarn backend:dev\" \"yarn frontend\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "concurrently": "^7.0.0"
  }
}
